<body>
    <a href="/admin" class="btn btn-primary">Panel de Administrador</a>
    <button class="btn btn-warning" id="eliminarInactivos" onclick="deleteInactiveUsers()">Eliminar Usuarios Sin Actividad</button>
    <h1>Administrar Usuarios</h1>
    <table>
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Correo Electr√≥nico</th>
                <th>Rol</th>
                <th>Ult. conexion</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            {{#each users}}
            <tr>
                <td>{{this.first_name}} {{this.last_name}}</td>
                <td>{{this.email}}</td>
                <td>{{this.rol}}</td>
                <td>{{this.last_connection}}</td>
                <td>
                    <button class="btn btn-primary" onclick="changeRole('{{this._id}}')">Cambiar Rol</button>
                    <button class="btn btn-danger" onclick="deleteUser('{{this._id}}')">Eliminar</button>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>

</body>

<script src="/js/admin.js"></script>